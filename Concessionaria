package exerc5;

import java.util.Scanner;

public class escolhas {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		
		System.out.println("Marcas");
		System.out.println("1 - Chevrolet ");
		System.out.println("2 - Fiat");
		System.out.println("3 - Volks");
		System.out.printf("Digite a opção escolhida: ");
		int escolha = sc.nextInt();
		
		switch(escolha){
		
		case 1:
			System.out.println("Carros");
			System.out.println("1 - Cobalt ");
			System.out.println("2 - S10");
			System.out.println("3 - Onix");
			System.out.printf("Digite a opção escolhida: ");
			int escolhaCarroChevrolet = sc.nextInt();
			
			switch(escolhaCarroChevrolet){
			
			case 1:
				System.out.println("Você escolheu Cobalt!");
				break;
			case 2:
				System.out.println("Você escolheu S10!");
				break;
			case 3:
				System.out.println("Você escolheu Onix");
				break;
			default:
				System.out.println("Escolha incorreta!");
				break;
			}
			break;
		case 2:
			System.out.println("Carros");
			System.out.println("1 - Argo ");
			System.out.println("2 - Toro");
			System.out.println("3 - Pulse");
			System.out.printf("Digite a opção escolhida: ");
			int escolhaCarroFiat = sc.nextInt();
			
			switch(escolhaCarroFiat){
			
			case 1:
				System.out.println("Você escolheu Argo!");
				break;
			case 2:
				System.out.println("Você escolheu Toro!");
				break;
			case 3:
				System.out.println("Você escolheu Pulse");
				break;
			default:
				System.out.println("Escolha incorreta!");
				break;
			}
			break;
		case 3:
			System.out.println("Carros");
			System.out.println("1 - Gol ");
			System.out.println("2 - Polo");
			System.out.println("3 - Golf");
			System.out.printf("Digite a opção escolhida: ");
			int escolhaCarroVolks = sc.nextInt();
			
			switch(escolhaCarroVolks){
			
			case 1:
				System.out.println("Você escolheu Gol!");
				break;
			case 2:
				System.out.println("Você escolheu Polo!");
				break;
			case 3:
				System.out.println("Você escolheu Golf");
				break;
			default:
				System.out.println("Escolha incorreta!");
				break;
			}
			break;
		default:
			System.out.println("Escolha incorreta!");
			break;
		}
		
		sc.close();

	}

}
